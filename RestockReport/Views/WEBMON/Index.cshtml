<script>

    function myFunction() {
        var x = document.getElementById("Password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
    $(".nav li").removeClass("active");
    $('#Webmoonuser').addClass('active');

</script>
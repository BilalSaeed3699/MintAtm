<div class="content container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">WEBMON USER</h5>
                    <div class="row">
                        <div class="col-md-8 col-lg-8">
                            @if (ViewBag.IsError != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @ViewBag.IsError
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                            }

                            @if (ViewBag.IsSuccess != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @ViewBag.IsSuccess
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                            }
                            @using (Html.BeginForm("Changepassword", "WEBMON", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <form>
                                    <div class="form-group">
                                        <label>User Name:</label>
                                        <input type="text" value="@ViewBag.WebMoonId" class="form-control" id="WebmoonId" name="WebmoonId" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Password:</label>
                                        <input type="password" value="@ViewBag.Password" class="form-control" id="Password" name="Password" required><br />
                                        <input type="checkbox" onclick="myFunction()"> Show Password
                                        <span id='message'></span>
                                    </div>
                                    <button style="        background-color: #8dc745 !important;
        border: 1px solid #8dc745
" class="btn btn-primary" type="submit" id="Register">
                                        Save Changes
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


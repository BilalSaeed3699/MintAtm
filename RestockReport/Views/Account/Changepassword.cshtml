
<div class="content container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Change Password</h5>
                    <div class="row">
                        <div class="col-md-8 col-lg-8">
                            @if (ViewBag.IsError != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @ViewBag.IsError
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                            }

                            @if (ViewBag.IsSuccess != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @ViewBag.IsSuccess
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                            }
                            @using (Html.BeginForm("Changepassword", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <form>
                                    <div class="form-group">
                                        <label>Old Password</label>
                                        <input style="width:100%" type="password" class="form-control" name="oldPassword" required>
                                    </div>
                                    <div class="form-group">
                                        <label>New Password</label>
                                        <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        <input type="password" class="form-control" id="confirm_password" required>
                                        <span id='message'></span>
                                    </div>
                                    <button style="        background-color: #8dc745 !important;
        border: 1px solid #8dc745
" class="btn btn-primary" type="submit" id="Register">Save Changes</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="~/assets/js/jquery-3.2.1.min.js"></script>
<script type="text/javascript">
    $('#newPassword, #confirm_password').on('keyup', function () {
        if ($('#newPassword').val() == $('#confirm_password').val()) {
            $('#message').html('Matching').css('color', 'white');
            document.getElementById("Register").disabled = false;
        } else {
            $('#message').html('Not Matching').css('color', 'red');
            document.getElementById("Register").disabled = true;
        }
    });
</script>